<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd%22%3E
<mapper namespace="com.game.team2.mapper.PointInfoMapper">

    <select id="selectPointInfo" parameterType="int" resultType="com.game.team2.vo.PointInfoVO">
        SELECT PI_POINT
        FROM POINT_INFO
        WHERE UI_NUM = #{uiNum}
        AND GI_NUM = #{giNum}
    </select>


    <insert id="insertPointInfo" parameterType="com.game.team2.vo.PointInfoVO">
        INSERT INTO POINT_INFO(GI_NUM, UI_NUM, PI_POINT)
        VALUES (#{giNum}, #{uiNum}, #{piPoint})
    </insert>


    <update id="updatePointInfo" parameterType="com.game.team2.vo.PointInfoVO">
        UPDATE POINT_INFO
        SET PI_POINT = #{piPoint}, 
        LMODAT = DATE_FORMAT(NOW(),'%Y%m%d')
        WHERE UI_NUM = #{uiNum}
        AND GI_NUM = #{giNum}
    </update>
</mapper>